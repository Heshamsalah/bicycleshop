<% content_for :title do %>
  <a href="#">
      Search
  </a>
<% end %>
<div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-md-3">
        <div class="card" style="height: 350px;">
          <%= link_to(bike) do %>
            <img class="card-img-top" src="<%= bike.picurl %>" style="width: 100%; height: 170px;" alt="<%= bike.name %>">
          <% end %>
          <div class="card-block" style="border-top: 1px solid lightgrey;">
            <h4 class="card-title"><%= bike.name %></h4>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><strong>Style:</strong> <%= bike.style %></li>
              <li class="list-group-item"><strong>Price:</strong> <%= bike.price %> <i class="fa fa-usd" aria-hidden="true"></i></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
</div>

<%= render 'searchform' %>
