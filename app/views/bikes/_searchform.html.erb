<% content_for :menu do %>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= form_tag bikes_path, method: 'get', id: "test" do %>
          <div class="form-group">
              <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Name" %>
          </div>
          <div class="form-group">
            <%= text_field_tag :style, params[:style], class: "form-control", placeholder: "Style" %>
          </div>
          <div class="form-group">
            <%= number_field_tag :min_price, params[:min_price], class: "form-control", placeholder: "Min Price" %>
          </div>
          <div class="form-group">
            <%= number_field_tag :max_price, params[:max_price], class: "form-control", placeholder: "Max Price" %>
          </div>
          <div class="form-group">
            <%= label_tag "Order By:" %>
            <select class="form-control" style="font-family: 'FontAwesome', Helvetica;" id="order" name="order">
              <option value="">Select</option>
              <option value="name">Name &#xf077;</option>
              <option value="name DESC">Name &#xf078;</option>
              <option value="style">Style &#xf077;</option>
              <option value="style DESC">Style &#xf078;</option>
              <option value="price">Price &#xf077;</option>
              <option value="price DESC">Price &#xf078;</option>
            </select>
          </div>
          <%= submit_tag "Search", class: "btn btn-default" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
